    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
</head>

<body>
    <div class="container">
        <hr>
        <h1 class="text-center">Thêm mới ca sĩ</h1>
        <hr>
        <form class="form-horizontal" action="/add" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Tên ca sĩ" name="name">
                </div>
            </div>
            <!-- <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Image Link:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Nhập link ảnh" name="image">
                </div>
            </div> -->
            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Image:</label>
                <div class="col-sm-10">
                    <input type="file" name="image">
                </div>
            </div>            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Thêm</button>
                </div>
            </div>
        </form>
    </div>

</body>

</html>